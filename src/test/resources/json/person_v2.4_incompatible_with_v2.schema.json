{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "Email": {
      "type": "string"
    },
    "home_address": {
      "type": "object",
      "properties": {
        "country": {
          "type": "integer",
          "enum": [
            0,
            840,
            124,
            484
          ]
        },
        "line_1": {
          "type": "string"
        },
        "postal_code": {
          "type": "integer"
        },
        "line_2": {
          "type": "string"
        }
      },
      "required": [
        "country",
        "line_1",
        "postal_code"
      ]
    }
  },
  "required": [
    "id",
    "name",
    "email",
    "Email",
    "home_address"
  ]
}